{# Shoe/Table/list.html.twig #}
{% extends 'base2.html.twig' %}

{% block body %}
<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="thead-light">
            <tr><th colspan="3" class="text-center">Shoe Listing</th></tr>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            {% for shoe in shoes %}
            <tr>
                <td><a href="{{ path('shoe_edit', {shoeCode: shoe.code}) }}">{{ shoe.codeColor }}</a></td>
                <td>{{ shoe.name }}</td>
                <td>{{ shoe.color }}</td>
            </tr>
            {%  endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
