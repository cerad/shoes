{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Shoe Listing</h1>
        {{ form(form) }}
        <table>
            {% for shoeStore in shoeStores %}
                <tr>
                    <td>{{ shoeStore.store }}</td>
                    <td>{{ shoeStore.priceCurrency }}</td>
                    <td>{{ shoeStore.shoe.codeColor }}</td>
                    <td>{{ shoeStore.shoe.name }}</td>
                    <td>{{ shoeStore.shoe.color }}</td>
                </tr>
            {%  endfor %}
        </table>
    </div>
{% endblock %}
